</div>

@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#addMedi").click(function () {
                var sno = 0;
                //sno = parseint(sno)+1;
                var name = $("#MediName").val();
                var qty = $("#Qty").val();
                var note = $("#Presc").val();
                var markup = "<tr><td>" + sno + "</td><td>" + name + "</td><td>" + qty + "</td><td>" + note + "</td></tr>";
                $("table tbody").append(markup);
            });
        });

        
        $(document).ready(function () {
            $('#btnGenerate').click(function (e) {
                window.location.href = '@Url.Content("/HelpDesk/generateReport")';
            });
        });
  
       </script>
}
